.hint-container{
  padding:10px;
}
.hint-input-container{
  margin-top:10px;
}
 .hint-input-label,
 .hints-checkbox-label{
  color:rgb(160,160,160);
  font-family:arabic-indic;
  font-size:18px;
  letter-spacing:1px;

}

.hint-input-label{
  font-size:100px;
}
.hint-container .hints-checkbox-select option{
   padding:10px;
   border-radius:10px;
}
.hint-container .hints-checkbox-select{
  cursor:pointer;
  margin-left: 10px;
  font-size: 0.7em;
  padding:5px 10px;
  color:rgb(160,160,160);
  border-radius:5px;
  font-size:15px;
  box-shadow:0px 1px 1px rgba(0,0,0,.7),inset 0px 1px rgba(255,255,255,.7);
  border:none;

}
.hint-container .hints-checkbox-select:active{
  border:none;
}
.hint-container .hint-input{
  margin-left: 10px;
  font-size: 20px;
  border-radius:4px;
  width: 300px;
  display:block;
  font-family:arabic-indic;
  padding:10px;
  box-shadow:0px 1px 1px rgba(0,0,0,.7),inset 0px 1px rgba(255,255,255,.7);
  border:none;
  color:rgb(160,160,160);
}
.hint-container input[type='submit']{
  background:white;
  border:none;
  box-shadow:0px 1px 1px rgba(0,0,0,.7),inset 0px 1px rgba(255,255,255,.7);
  border-radius:6px;
  padding:5px 10px;
  margin:10px;
  color:rgb(160,160,160);
  font-size:18px;
  cursor:pointer;
  transition:all 500ms;
}
.hint-container input[type='submit']:hover
{
  background:rgb(250,250,250);
  color:rgb(10,10,10);
}

form{
  border: 3px solid #f1f1f1;
}

input[type=text], input[type=password] {
    width: 100%;
    padding: 12px 20px;
    margin: 8px 0;
    display: inline-block;
    border: 1px solid #ccc;
    box-sizing: border-box;
  box-shadow:0px 1px 1px rgba(0,0,0,.7), inset 0px 1px rgba(255,255,255,.7);
}

button {
    background-color: gray;
    color: white;
    padding: 14px 20px;
    margin: 8px 0;
    border: none;
    cursor: pointer;
    width: 10%;
  box-shadow:0px 1px 1px rgba(0,0,0,.7), inset 0px 1px rgba(255,255,255,.7);
}

button:hover {
    opacity: 0.8;
}

.container {
    padding: 16px;
  box-shadow:0px 1px 1px rgba(0,0,0,.7), inset 0px 1px rgba(255,255,255,.7);
}

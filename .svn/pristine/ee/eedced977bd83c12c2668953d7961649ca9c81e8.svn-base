.hint-container .hints-checkbox-select option{
   padding:10px;
   border-radius:10px;
}
.hint-container .hints-checkbox-select{
  cursor:pointer;
  margin-left: 10px;
  font-size: 0.7em;
  padding:5px 10px;
  color:rgb(160,160,160);
  border-radius:5px;
  font-size:15px;
  box-shadow:0px 1px 1px rgba(0,0,0,.7),inset 0px 1px rgba(255,255,255,.7);
  border:none;

}
select.hints-checkbox-select{
  margin-left: 6px;
}
.hint-container .hints-checkbox-select:active{
  border: 1px solid;
}
.hint-container .hint-input{
  margin-left: 10px;
  font-size: 20px;
  border-radius:4px;
  width: 300px;
  display:block;
  padding:10px;
  box-shadow:0px 1px 1px rgba(0,0,0,.7),inset 0px 1px rgba(255,255,255,.7);
  border:none;
  color:rgb(160,160,160);
}
.hint-container input[type='submit']{
  background:white;
  border:none;
  box-shadow:0px 1px 1px rgba(0,0,0,.7),inset 0px 1px rgba(255,255,255,.7);
  border-radius:6px;
  padding:5px 10px;
  margin:10px;
  color:rgb(160,160,160);
  font-size:18px;
  cursor:pointer;
  transition:all 500ms;
}
.hint-container input[type='submit']:hover
{
  background:rgb(250,250,250);
  color:rgb(10,10,10);
}
